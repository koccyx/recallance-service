{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"composite": true,
		"outDir": "./dist",
		"baseUrl": "src",
		"paths": {
			"@/*": [
				"./*"
			]
		}
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": ["node_modules"]
}
